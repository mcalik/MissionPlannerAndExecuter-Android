<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".MapActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/showTeamButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:text="Team" />

    <Button
        android:id="@+id/showMissionDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:text="Details" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:baselineAligned="false"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/readyLabel"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/functionalButton"
            android:layout_gravity="center_horizontal|bottom"
            android:visibility="visible" />

    </LinearLayout>

    <ScrollView
        android:layout_width="334dp"
        android:layout_height="213dp"
        android:id="@+id/radioMessages"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:fillViewport="true" >

    </ScrollView>

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/buttonMyLocation"
        android:layout_gravity="right|bottom"
        android:background="@android:drawable/presence_online"
        android:layout_marginRight="15dip"
        android:clickable="true"
        android:enabled="true"
        android:visibility="visible"
        android:layout_marginBottom="15dip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:id="@+id/buttonMessage"
        android:layout_gravity="right|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagesTextView"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ff000000"
        android:background="#40ffffff"
        android:textSize="16sp"
        android:autoText="false"
        android:text="Radio Messages:" />


</FrameLayout>
