<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="top"
    style="@style/Theme.Base.Light"
    android:clickable="true"
    android:focusable="true"
    android:background="#aaffdb58"
    android:padding="10dip">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="name"
            android:id="@+id/missionName"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff000000" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date"
            android:id="@+id/missionDate"
            android:layout_column="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff464646" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="missionLat"
            android:id="@+id/missionLat"
            android:layout_column="3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff464646" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="missionLon"
            android:id="@+id/missionLon"
            android:layout_column="6"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff464646" />
    </TableRow>

</TableLayout>